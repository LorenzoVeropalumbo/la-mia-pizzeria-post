@model Pizza
<div class="pizze_index">
    <div class="pizza_card">
        <img src="@Model.Image" />
        @{
            int count = new Random().Next(1, 6);
        }
        <span>
            @for (int i = 0; i < count; i++)
            {
                <i class="fa-solid fa-star"></i>
            }
        </span>
        <p>@Model.Description</p>
        <h3>@Model.Title</h3>
        <p><span class="price">$@Model.Price</span></p>
    </div>
</div>

